<h1>All our Flats</h1>
<%= link_to 'Add Flat', new_flat_path %>


<% @flats.each do |flat| %>
  <h2><%= flat.name %></h2>
  <p>Address: <%= flat.address %></p>
  <p><strong>Description:</strong> <%= flat.description %></p>
  <h3>Price $: <%= flat.price_per_night %></h3>
  <h4>Number of Guests: <%= flat.number_of_guests %></h4>
  <%= link_to 'More info', flat %>
<% end %>

